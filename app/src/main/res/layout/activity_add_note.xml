<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutCustom"
    tools:context="com.example.irenemitsopoulou.threegoodthings.AddNote">

    <EditText
        android:id="@+id/title"
        style="@style/Custom"
        android:focusableInTouchMode="false"
        android:hint="@string/Date"
        android:inputType="text"
        android:onClick="date" />

    <EditText
        android:id="@+id/note1"
        style="@style/CustomEditText"
        android:hint="@string/First_Good_Thing" />

    <EditText
        android:id="@+id/note2"
        style="@style/CustomEditText"
        android:hint="@string/Second_Good_Thing" />

    <EditText
        android:id="@+id/note3"
        style="@style/CustomEditText"
        android:hint="@string/Third_Good_Thing" />

    <Button
        style="@style/Custom"
        android:onClick="save"
        android:text="@string/save" />


</LinearLayout>